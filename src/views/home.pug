doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/static/styles/styles.css")
        title RealTime Game
    body 
        div#loginContainer
            form
                input(placeholder="Enter your name", type="text")
        div#gameContainer
            div
                canvas#jsCanvas.canvas
                .controls 
                    .controls_range 
                        input#jsRange(type="range", min=0.1, max=5.0, value=2.5, step=0.1)
                    .controls_btns 
                        button#jsMode|Fill 
                    #jsColors.controls_colors 
                        div.controls_color(style="background-color: #2c2c2c;")
                        div.controls_color(style="background-color: white;")
                        div.controls_color(style="background-color: #ff3b30;")
                        div.controls_color(style="background-color: #ff9500;")
                        div.controls_color(style="background-color: #ffcc00;")
                        div.controls_color(style="background-color: #4cd963;")
                        div.controls_color(style="background-color: #5ac8fa;")
                        div.controls_color(style="background-color: #0579ff;")
                        div.controls_color(style="background-color: #5856d6;")
            .chat 
                ul.chatContainer
                form
                    input(placeholder="Enter the message", type="text")
        script(src="/socket.io/socket.io.js")
        script(src="/static/js/main.js")